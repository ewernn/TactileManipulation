<mujoco model="panda scene with two cubes">
  <include file="mjx_scene.xml"/>

  <worldbody>
    <!-- cubeA: 2cm × 2cm × 2cm -->
    <body name="cubeA" pos="0.5 0.1 0.03">
      <freejoint/>
      <geom type="box" name="cubeA" size="0.01 0.01 0.01" condim="3"
       friction="1 .03 .003" rgba="0 1 0 1" contype="2" conaffinity="1" solref="0.01 1"/>
    </body>
    
    <!-- cubeB: 2.5cm × 2.5cm × 2.5cm -->
    <body name="cubeB" pos="0.5 -0.1 0.03">
      <freejoint/>
      <geom type="box" name="cubeB" size="0.0125 0.0125 0.0125" condim="3"
       friction="1 .03 .003" rgba="1 0 0 1" contype="2" conaffinity="1" solref="0.01 1"/>
    </body>
    
    <!-- Mocap object for control (optional) -->
    <body mocap="true" name="mocap_target">
      <geom type="box" size="0.01 0.01 0.01" rgba="0 0 1 0.2" contype="0" conaffinity="0"/>
    </body>
  </worldbody>

  <keyframe>
    <!-- Default home position with both cubes in their initial positions -->
    <key name="home"
      qpos="0 0.3 0 -1.57079 0 2.0 -0.7853 0.04 0.04 0.5 0.1 0.03 1 0 0 0 0.5 -0.1 0.03 1 0 0 0"
      ctrl="0 0.3 0 -1.57079 0 2.0 -0.7853 0.04"/>
  </keyframe>
</mujoco> 