<mujoco model="panda scene with single cube">
  <include file="mjx_scene.xml"/>

  <worldbody>
    <!-- Single cube for grasping -->
    <body name="cube" pos="0.5 0 0.03">
      <freejoint/>
      <!-- Changed conaffinity from 1 to 3 to match fingertip collision -->
      <geom type="box" name="cube" size="0.02 0.02 0.02" condim="3"
       friction="1 .03 .003" rgba="0 1 0 1" contype="2" conaffinity="3" solref="0.01 1"/>
    </body>
    
    <!-- Mocap object for control (optional) -->
    <body mocap="true" name="mocap_target">
      <geom type="box" size="0.01 0.01 0.01" rgba="0 0 1 0.2" contype="0" conaffinity="0"/>
    </body>
  </worldbody>

  <keyframe>
    <!-- Default home position with cube in center -->
    <key name="home"
      qpos="0 0.3 0 -1.57079 0 2.0 -0.7853 0.04 0.04 0.5 0 0.03 1 0 0 0"
      ctrl="0 0.3 0 -1.57079 0 2.0 -0.7853 0.04"/>
  </keyframe>
</mujoco>